        "/api/products": {
            "get": {
                "summary": "Get all products with optional search and filter",
                "operationId": "1bfaa78d1c2c3848ab8165c5dadcad3e",
                "parameters": [
                    {
                        "name": "search",
                        "in": "query",
                        "description": "Search products by name or description",
